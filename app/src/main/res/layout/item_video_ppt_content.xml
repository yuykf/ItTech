<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="52dp"
    android:layout_height="match_parent">

    <!--下半屏-->
    <ImageView
        android:id="@+id/iv_video_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <!--未拍摄内容-->
    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFA3B7C1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/iv_already_video"
        android:background="@mipmap/luzhi_label_yiluzhi"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"/>

    <!--点击拍摄蒙层-->
    <ImageView
        android:id="@+id/iv_mc"
        android:background="#FF000000"
        android:alpha="0.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/iv_luzhi_dot"
        app:layout_constraintLeft_toLeftOf="@+id/iv_video_content"
        app:layout_constraintRight_toRightOf="@+id/iv_video_content"
        app:layout_constraintTop_toTopOf="@+id/iv_video_content"
        app:layout_constraintBottom_toBottomOf="@+id/iv_video_content"
        android:background="@drawable/iv_luzhi_dot"
        android:layout_width="12dp"
        android:layout_height="12dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>