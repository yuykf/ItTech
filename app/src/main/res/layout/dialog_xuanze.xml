<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="#313233"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_choice_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_right_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="选项个数"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <LinearLayout
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_num2"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_right_num"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/tc_select_num"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_num3"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_right_num"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/tc_select_num"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_num4"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:background="@drawable/bg_num_select_true"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_sample"
        android:layout_width="match_parent"
        android:layout_height="120dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:background="@color/white"
            android:src="@mipmap/nav_close" />

        <TextView
            android:id="@+id/tv_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="默认"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_look1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="皮肤1"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_look2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="皮肤2"
            android:textColor="@color/white" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />


        <ImageView
            android:id="@+id/iv_ok"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="15dp"
            android:background="@color/white"
            android:src="@mipmap/nav_close" />

    </LinearLayout>

</LinearLayout>